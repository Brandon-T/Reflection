{*
RPlayer.HandleResponse
~~~~~~~~~~~~~~~~~~~~~~
Returns true if the response was found during login.
*}
Function RPlayer.HandleResponse(Response: String; Attempts: Int32): Boolean;
type
  TResponse = record
    Text: String;
    Attempts: Int32;
    WaitTime: Int32;
 end;
var
  Responses: array of TResponse;
  i: Int32;
begin
  Responses := [
                ['Invalid username or password.', 5, 0],
                ['Please enter your username/email address.', 5, 0],
                ['Error connecting to server.', 20, 10000],
                ['Your account has not logged out', 5, 60000],
                ['Login server offline.', 20, 60000],
                ['Error loading your profile.', 20, 60000],
                ['Connection timed out.', 20, 30000],
                ['Login limit exceeded', 20, 30000],
                ['This world is full', 20, 15000],
                ['Your account has been disabled', 1, 0]
               ];

  for i := 0 to High(Responses) do
    if (Pos(Responses[i].Text, Response) > 0) then
    begin
      Writeln('Found response "%s"', [Responses[i].Text]);

      if (Attempts >= Responses[i].Attempts) then
        Exit(False);
      if (Responses[i].WaitTime > 0) then
        Wait(Responses[i].WaitTime + Random(1000));

      Exit(True);
    end;

  Writeln('Unknown login response "%s"', [Response], dtFatal);
end;

{*
RPlayer.LoginToLobby
~~~~~~~~~~~~~~~~~~~~
Returns true if the player was logged into the lobby.
*}
Function RPlayer.LoginToLobby: Boolean;
var
  Response: String;
  Attempts: Int32;
begin
  while (Attempts < 25) do
  begin
    Inc(Attempts);

    if R_IsLoggedIn() then
      Exit(True);
    if R_IsLobbyOpen() then
      Exit(True);
    if (not R_LoginScreen.Open()) then
      Exit(False);

    if R_LoginScreen.EnterDetails(Self.LoginName, Self.Password) then
    begin
      Response := R_LoginScreen.WaitResponse();

      if R_WaitIsLobbyOpen(5000) then
        Exit(True);
      if (Response <> '') and (not Self.HandleResponse(Response, Attempts)) then
        Break;
    end;
  end;

  WriteLn('Failed logging into lobby');
end;

{*
RPlayer.Login
~~~~~~~~~~~~~
Returns true if the player was logged in.
*}
Function RPlayer.Login: Boolean;
var
  Attempts: Int32;
begin
  while (Attempts < 20) do
  begin
    Inc(Attempts);

    if R_IsLoggedIn then
      Exit(True);

    if R_IsLobbyOpen then
      Result := R_EnterGame
    else begin
      R_LoginScreen.Open();

      if (Self.World < 1) then
      begin
        if Self.isMember then
          Self.WorldFilter.Properties += TYPE_FREE
        else
          Self.WorldFilter.Properties += TYPE_MEMBERS;

        Self.World := WorldPanel.GetWorld(Self.WorldFilter);
      end;
      if (R_LoginScreen.GetCurrentWorld() <> Self.World) then
      begin
        if R_LoginScreen.OpenWorldSwitcher() and WaitUntil(WorldPanel.IsOpen, 50, Random(6000, 8000)) then
          WorldPanel.SelectWorld(Self.World);
        if (R_LoginScreen.GetCurrentWorld() <> Self.World) then
          Continue;
      end;

      if (Self.LoginToLobby()) then
        R_EnterGame;
      
      if (R_IsLoggedIn) then
        Result := True;
    end;

    Wait(Random(200, 400));
  end;
end;

